{% extends "::layout.html.twig" %}
{% block body %}
<section class="content">
<div class="row">
  <div class="col-sm-4">
    <div class="box box-primary">
      <div class="box-body text-center">
        {% if vente.image is not null %}
        <img src="{{ asset(vente.image.webPath) | imagine_filter('couverturelist') }}" style="border: 1px solid #d0d0d0;margin-top:20px;margin-bottom:20px;" alt="{{ vente.image.alt }}" onError="ImageLoadFailed()"/>
        {% else %}
        <img style="margin-top:20px;border: 1px solid #d0d0d0;" src="{{ asset("hdv/web/bundles/images/couv/sans.jpg") | imagine_filter('couverturelist') }}" alt="sans">
        {% endif %}<br/><br/>
    <div class="list-group">
      <a href="{{ path('hdv_ventes_plus', {'id': vente.id}) }}" class="list-group-item"><i class="fa fa-fw fa-info"></i>Informations sur la vente</a>
      <a href="{{ path('hdv_ventes_homepage') }}" class="list-group-item"><i class="fa fa-fw fa-calendar"></i>Retour au calendrier</a>
    </div>
      </div>
    </div>
  </div>

  <div class="col-sm-8">
    <div class="box box-content">
      <div class="box-body content">
        <div class="box-header with-border">
          <h3 class="box-title">{{ vente.title }}</h3>
        </div>
  <br/>
<div class="row">
    <div class="col-sm-7">
<span style="color:#a52a2a"><strong>{{ vente.date|localizeddate('full', 'short', 'fr')|capitalize }}</strong></span><br/><br/>
