{% extends "@FOSUser/layout.html.twig" %}
{% block fos_user_content %}

<div class="box-header with-border">
        <h3 class="box-title">Envoi de votre pièce d'identité</h3>
      </div>
    <div class="box-body content">
              {{ form_start(form, {'attr': {'id': 'formup'}}) }}
              <div class="alert alert-warning">
                <strong>Important.</strong><br/> Les documents que vous transmettez sont strictement confidentiels. Ils ne seront pas conservés en ligne.
              </div>
              <div class="row" style="padding: 10px;">
              <br/>
              <label for="nothing" class="col-sm-2 control-label">Fichier PDF/JPG :</label>
              <div class="col-sm-8">

              {{ form_label(form.file, null, {'label_attr': {'class': 'hidden'}}) }}
              {{ form_errors(form.file) }}
              {{ form_widget(form.file, {'attr': {'id': 'file'}}) }}

                </div>
              </div>
              <div class="row" style="padding: 20px;">
                     {{ form_widget(form.send, {'attr': {'class': 'btn btn-primary'}}) }}
                     </div>
                           </div>

            {{ form_rest(form) }}

             {{ form_end(form) }}

             </div>
{% endblock %}
