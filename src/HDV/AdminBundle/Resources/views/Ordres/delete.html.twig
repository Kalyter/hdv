 <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
</head>
<body class="hold-transition skin-blue sidebar-mini">
<h2>Supprimer un ordre</h2><hr>

<p>
    Etes-vous certain de vouloir supprimer l'ordre du lot {{ ordre.object.ordre }}{% if ordre.object.ordrebis is defined %} {{ ordre.object.ordrebis }}{% endif %} par {{ ordre.user.gender }} {{ ordre.user.firstname }} {{ ordre.user.lastname }} ?
</p>

{# On met l'id de l'annonce dans la route de l'action du formulaire #}
<form id="form" action="{{ path('hdv_admin_ordres_delete', {'id': ordre.id }) }}" method="post">

    <input type="submit" value="Supprimer" class="btn btn-danger" />


</form>
<script>
$(document).ready(function() {
    $('#form').on('submit', function(e) {
        e.preventDefault(); // J'empêche le comportement par défaut du navigateur, c-à-d de soumettre le formulaire
        var $this = $(this);
            $.ajax({
                url: $this.attr('action'),
                type: $this.attr('method'),
                data: $this.serialize(),
                dataType: 'json', // JSON
                success: function(json) {
                  parent.location.reload(true);
                }
            });

    });
    $(".btn").click(function(){
        $(this).button('loading');
    });
});
</script>
</body>
</html>
