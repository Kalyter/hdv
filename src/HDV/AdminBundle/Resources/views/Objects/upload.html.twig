    border: 2px dashed #0087F7;
    border-radius: 5px;
    background: white;
}
.dropzone .dz-message {
    font-weight: 400;
}
</style>
{% javascripts 'bundles/adminjs/jquery-2.2.3.min.js' %}
 <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<script src="http://rawgit.com/enyo/dropzone/master/dist/dropzone.js"></script>
</head>

<body class="hold-transition skin-blue sidebar-mini">

<div class="dropzone needsclick dz-clickable" id="form_snippet_image" action="{{path('ajax_snippet_image_send', {'idvente': vente.id}) }}">
  <div class="dz-message needsclick">
    Cliquez ou déposez vos images ici.<br>
  </div>
</div>
<script >
//je récupère l'action où sera traité l'upload en PHP
var _actionToDropZone = $("#form_snippet_image").attr('action');

//je définis ma zone de drop grâce à l'ID de ma div citée plus haut.
Dropzone.autoDiscover = false;
var myDropzone = new Dropzone("#form_snippet_image", { url: _actionToDropZone });
myDropzone.on("complete", function(file) {
  myDropzone.removeFile(file);
});
</script>
</body>
</html>
